{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/gql/*": ["./src/graphql/__generated__/*"],
      "@/gql": ["./src/graphql/types.ts"],
      "@/stores/user-store": ["./src/stores/user-store/user-store.ts"],
      "@/stores/settings-store": ["./src/stores/settings-store/settings-store.ts"]
    }
  },
  "include": [
    "./src",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./next.config.ts",
    "./tailwind.config.ts",
    "src/middleware.ts",
    "codegen.ts"
  ],
  "exclude": ["node_modules"]
}
